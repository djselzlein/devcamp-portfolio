<div class="app-card-container">
  <div class="card">
    <h1>About me</h1>

    <hr>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag "eu.jpg", width: 300, alt: 'Profile image', class: 'profile-img' %>
      </div>
      <div class="col-md-8">
        <p>I am a web developer with over 2 years of programming experience working with Java on Spring Framework</p>

        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler="jobHistory"
          >
            Job history
          </button>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler="education"
          >
            Education
          </button>
        </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-body">
              Job 1
            </div>
            <div class="card card-body">
              Job 2
            </div>
          </div>
          <div class="collapse" id="education">
            <div class="card card-body">
              School 1
            </div>
            <div class="card card-body">
              School 2
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
